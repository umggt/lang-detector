<Window x:Class="LangDetector.SolicitarIdiomaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangDetector"
        mc:Ignorable="d"
        Title="SolicitarIdiomaWindow" Height="180" Width="300" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtMensaje" Text=""  Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="10" />
        <TextBox x:Name="txtNombreIdioma" Grid.ColumnSpan="2" Grid.Row="1" Margin="10" />
        <Button x:Name="btnAceptar" Content="Aceptar" Grid.Row="2" Margin="10" Click="btnAceptar_Click" />
        <Button x:Name="btnCancelar" Content="Cancelar" Grid.Row="2" Grid.Column="1" Margin="10" Click="btnCancelar_Click" />

    </Grid>
</Window>
